<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
  <display-name>Phoneshop servlet api training</display-name>

  <context-param>
    <param-name>insertDemoData</param-name>
    <param-value>true</param-value>
  </context-param>

  <servlet>
    <servlet-name>productList</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductListPageServlet</servlet-class>
  </servlet>

  <filter>
    <filter-name>commandFilter</filter-name>
    <filter-class>com.es.phoneshop.web.command.CommandByUriFilter</filter-class>
  </filter>
  
  <listener>
    <listener-class>com.es.phoneshop.web.DemoDataServletContextListener</listener-class>
  </listener>

  <servlet-mapping>
    <servlet-name>productList</servlet-name>
    <url-pattern>/productList/*</url-pattern>
  </servlet-mapping>

  <filter-mapping>
    <filter-name>commandFilter</filter-name>
    <url-pattern>*.jsp</url-pattern>
  </filter-mapping>

  <servlet>
    <servlet-name>productPage</servlet-name>
    <servlet-class>com.es.phoneshop.web.ProductDetailsPageServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>productPage</servlet-name>
    <url-pattern>/products/*</url-pattern>
  </servlet-mapping>

  <error-page>
    <location>/WEB-INF/pages/errorProductNotFound.jsp</location>
    <exception-type>com.es.phoneshop.model.product.exception.ProductNotFoundException</exception-type>
  </error-page>
</web-app>
